@page
@model lista12.Pages.Articles.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Filename)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Filename)
        </dd>
        <dd class="col-sm-10">

            @if (Model.Article.Filename != null && Model.Article.Filename != "")
            {
                <img src="/upload/@Model.Article.Filename" alt="Uploaded Picture"/>
            }
            else
            {
                <img src="/upload/no_image.jpg" alt="No image" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Article.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
