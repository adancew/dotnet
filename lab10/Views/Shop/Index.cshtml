@model IEnumerable<lista10.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<form method="post">
    @Html.DropDownList("selectedItemName", ViewBag.ItemNames as IEnumerable<SelectListItem>, "Select a category")
    <button type="submit">Filter</button>
</form>

 <div class="row">

@foreach (var item in Model) {
    
    <div class="col-3">
       
            <div class="card text-center">
                
                <div class="card-body" >
                    <h5 class="card-title">@item.Name</h5>
                    @if (item.FormFile != null)
                    {
                        <img src="~/upload/@item.FormFile.FileName"
                             class="img-fluid"
                             style="max-width: 150px; max-height: 150px;" />
                    }
                    else
                    {
                        <img src="~/upload/no_image.jpg"
                         style="height:200px;width:200px;" />
                    }
                    <p class="card-text">
                        Price: @Html.DisplayFor(modelItem => item.Price)<br />
                        Category: @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </p>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info">Details</a>
                </div>
            </div>
       </div>
}

</div>

