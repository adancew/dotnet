@model IEnumerable<lista10.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<form method="post">
    @Html.DropDownList("selectedItemName", ViewBag.ItemNames as IEnumerable<SelectListItem>, "Select a category")
    <button type="submit">Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                Picture
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                   
                    @if (item.FormFile != null)
                    {

                        <img src="~/upload/@item.FormFile.FileName" 
                             width="100%" 
                             />

                    }
                    else
                    {
                        <img src="~/upload/no_image.jpg" style="height:100px;width:100px;" />
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
